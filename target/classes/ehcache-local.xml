<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" name="defaultCache">
	<diskStore path="java.io.tmpdir/ehcache/"/>
	<!-- DefaultCache setting. -->
	<defaultCache maxElementsInMemory="1000" eternal="false" timeToLiveSeconds="0" overflowToDisk="false" />	
	<cache name="goodsCache" maxElementsInMemory="10000" eternal="false" overflowToDisk="false" timeToLiveSeconds="86400"/>
	<cache name="cashierUser" maxElementsInMemory="10000" eternal="false" overflowToDisk="false" timeToLiveSeconds="86400"/>
	<cache name="changeShifts" maxElementsInMemory="10000" eternal="false" overflowToDisk="false" timeToLiveSeconds="86400"/>
</ehcache>
